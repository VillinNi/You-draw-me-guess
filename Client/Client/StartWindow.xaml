<Window x:Class="Client.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="客户端示例" Height="200" Width="300" WindowStartupLocation="CenterScreen" Closing="Window_Closing">
    <StackPanel VerticalAlignment="Center">
        <Button Name="btn1" Margin="10" Height="30" Width="170" Content="同时启动4个客户端（测试用）"  Click="btn1_Click"/>
        <Button Name="btn2" Margin="10" Height="30" Width="170" Content="只启动1个客户端（实际情况）" Click="btn2_Click"/>
    </StackPanel>
</Window>